{
  "name": "@thebespokepixel/time",
  "version": "0.5.4",
  "description": "A collection of utilities for Time and Space.",
  "main": "index.js",
  "module": "index.mjs",
  "files": [
    "index.js",
    "index.mjs"
  ],
  "dependencies": {
    "dateformat": "^3.0.3",
    "luxon": "^1.17.2",
    "moment": "^2.24.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "ava": "^2.2.0",
    "documentation-theme-bespoke": "^0.5.6",
    "gulp": "^4.0.2",
    "gulp-better-rollup": "^4.0.1",
    "gulp-rename": "^1.4.0",
    "nyc": "^14.1.1",
    "rollup": "^1.19.4",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.0.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "xo": "^0.24.0"
  },
  "scripts": {
    "test": "xo && nyc ava",
    "doc-serve": "documentation serve --watch --theme node_modules/documentation-theme-bespoke --github --config src/docs/documentation.yml --project-name $npm_package_name  --project-version $npm_package_version src/index.js",
    "doc-build": "documentation build --format html --output docs --theme node_modules/documentation-theme-bespoke --github --config src/docs/documentation.yml --project-name $npm_package_name  --project-version $npm_package_version src/index.js",
    "readme": "compile-readme -u src/docs/example.md src/docs/readme.md > readme.md",
    "coverage": "nyc ava && nyc report --reporter=lcov --report-dir test/coverage; open test/coverage/lcov-report/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thebespokepixel/time.git"
  },
  "keywords": [
    "date",
    "format"
  ],
  "author": "Mark Griffiths <mark@thebespokepixel.com> (http://thebespokepixel.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thebespokepixel/time/issues"
  },
  "homepage": "https://github.com/thebespokepixel/time#readme",
  "xo": {
    "ignores": [
      "index.js",
      "index.mjs",
      "docs/**",
      "src/docs/example.js",
      "test/coverage/**"
    ],
    "semicolon": false,
    "esnext": true
  },
  "ava": {
    "verbose": true,
    "files": [
      "test/*.js"
    ]
  },
  "badges": {
